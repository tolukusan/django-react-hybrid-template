# EditorConfig is awesome: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,json,html,css,scss,md}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 4

[Makefile]
indent_style = tab